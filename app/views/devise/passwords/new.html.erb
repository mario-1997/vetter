<div class="bg-gray-100 rounded p-4 flex flex-col">
  <h2 class="mb-4 text-center">Forgot your password?</h2>
  <div class="flex justify-center">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
        <%= f.input :email,
                    required: true,
                    placeholder: "Ingrese su email aqui",
                    autofocus: true,
                    input_html: { autocomplete: "email",class:"rounded mt-2" }, label_html:{class:"hidden"}  %>
        <div class="flex justify-center mt-2">
          <%= f.button :submit, "Send me reset password instructions", class:"p-1 rounded hover:bg-gray-300" %>
        </div>

    <% end %>
  </div>
  <div class="flex flex-col justify-center items-center mt-2">
    <%= render "devise/shared/links" %>
  </div>




</div>
