<div class="bg-gray-100 rounded p-4 flex flex-col">
  <h2 class="mb-4 text-center">Log in</h2>
  <div class="flex justify-center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: "Ingrese su email aqui",
                  input_html: { autocomplete: "email", class:"rounded mt-2" }, label_html:{class:"hidden"}%>
      <%= f.input :password,
                  required: false,
                  placeholder: "ContraseÃ±a",
                  input_html: { autocomplete: "current-password", class:"rounded mt-2" }, label_html:{class:"hidden"} %>
      <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="flex justify-center mt-2">
        <%= f.button :submit, "Log in", class:"p-1 rounded hover:bg-gray-300"%>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col justify-center items-center mt-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
